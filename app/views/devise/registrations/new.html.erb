<h2>Registrarse</h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <% errors = resource.errors.full_messages[0] %>
  
  <% if errors %>
    <div class="flash alert text-warning bg-warning"><%= resource.errors.full_messages[0] %></div>
  <% end %>
  
  <% flash.each do |key, value| %>
     <div class="flash alert text-warning bg-warning"><%= value %></div>
  <% end %>


  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :rut %>
        <%= f.text_field :rut, class: "form-control", autofocus: true, value: "", placeholder: "Ingrese rut", required: true %>    
      </div>        
    </div>  
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", autofocus: true, required: true, placeholder: "Ingrese email" %>
      </div>      
    </div>
  </div>     

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :nombre %>
        <%= f.text_field :nombre, class: "form-control", autofocus: true, value: "", placeholder: "Ingrese nombre", required: true %>    
      </div>        
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :apellido %>
        <%= f.text_field :apellido, class: "form-control", autofocus: true, value: "", placeholder: "Ingrese apellido", required: true %>    
      </div>        
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :telefono %>
        <%= f.text_field :telefono, class: "form-control", autofocus: true, value: "", placeholder: "Ingrese telefono", required: true %>    
      </div>        
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :direccion %>
        <%= f.text_field :direccion, class: "form-control", autofocus: true, value: "", placeholder: "Ingrese direccion", required: true %>    
      </div>       
    </div>
  </div>    

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :contraseÃ±a %>
        <%= f.password_field :password, class: "form-control", autocomplete: "off", required: true, placeholder: "Minimo 6 caracteres"  %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :confirmar_contraseÃ±a %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", required: true, placeholder: "Minimo 6 caracteres"  %>
      </div>      
    </div>
  </div>     
  <br>
  <div class="row">
    <div class="col-md-12">
      <div class="actions">
        <%= f.submit "Registrarse", class: "btn btn-success btn-block" %>
      </div>     
    </div>
  </div>      


<% end %>

